<h2><center>Sign up</center></h2><br /><br />
     <div class="container">
        <div class="row">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div><%= f.label :name, "Full Name" %><br />
  <%= f.text_field :name, :autofocus => true, :required => true %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :required => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :required => true %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :required => true %></div>

  <div><%= f.submit "Sign up", :class => "btn btn-large btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %><br /><br /><br /><br />
</div>
</div>