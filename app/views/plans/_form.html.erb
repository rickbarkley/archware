<%= f.file_field :drawing_2 %>
  </div>
  <div class="control-group">
	   <%= f.label :elevation, "Upload Elevation PDF", :class => 'control-label' %>
<%= f.file_field :elevation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
