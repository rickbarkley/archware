  <div class="field">
    <%= f.label :sqfoot %><br />
    <%= f.number_field :sqfoot %>
  </div>
  <div class="field">
    <%= f.label :levels %><br />
    <%= f.number_field :levels %>
  </div>
  <div class="field">
    <%= f.label :bathrooms %><br />
    <%= f.number_field :bathrooms %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :half_bath %><br />
    <%= f.number_field :half_bath %>
  </div>
  <div class="field">
    <%= f.label :living %><br />
    <%= f.number_field :living %>
  </div>
  <div class="field">
    <%= f.label :suite %><br />
    <%= f.text_field :suite %>
  </div>
  <div class="field">
    <%= f.label :stories %><br />
    <%= f.text_field :stories %>
  </div>
  <div class="field">
    <%= f.label :dining %><br />
