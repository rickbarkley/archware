

<% if @plan.accessible_to_user_by_saved?(current_user) %>
Plan Already Saved
<%end%>
<%end%>
	<div class="col-md-12 text-center">
	<% if user_signed_in? %>
			<%= form_for(@saved_plan) do |f| %>


			<%= f.hidden_field :plan_id %>
			<%= f.hidden_field :user_id, :value => current_user.id %>
			<%= f.hidden_field :email, :value => current_user.email %>
			  

			  <div class="form-actions">
		<h4>Would you like to save this Plan? <%= f.submit "Yes", class: "btn btn-primary" %>
			
	<INPUT Type="button" class="btn btn-primary" VALUE="Back To Plan" onClick="history.go(-1);return true;">
	<INPUT Type="button" class="btn btn-primary" VALUE="Back To Search" onClick="history.go(-2);return true;"></h4><br />
			  </div>
			<% end %>
			<%else%>
			<center><p>You must be signed in to save a plan
    <%= link_to 'Login', new_user_session_path, class: "btn btn-primary" %> 
    <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-primary" %></p>
    <%end%>

	

